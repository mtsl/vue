<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="vue_comeents_imgalign">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
     <style name="vue_comeents_text_align">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
     <style name="Theme_Dialog_Translucent"
           parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="textviewwrapcontent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="marging_left">
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="marging_right">
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="popupbottom">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="Theme.VueTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.VueTheme.ActionBar</item>
        <item name="actionButtonStyle">@style/actionButtonStyle</item>
        <!-- <item name="android:minWidth">24dp</item> -->
    </style>

    <style name="Widget.VueTheme.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="background">@drawable/actionbar_bg</item>
    </style>

    <style name="actionButtonStyle" parent="Widget.Sherlock.ActionButton">
    <item name="android:minWidth">24dp</item>
    <item name="android:padding">24dp</item>
</style>

</resources>