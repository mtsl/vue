<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dataentrypopup_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/dataentry_title_bg"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/dataentry_popup_screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:gravity="center_horizontal"
            android:text="Select One of the Sources"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <com.lateralthoughts.vue.ui.ArcMenu
        android:id="@+id/dataentry_arc_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/dataentry_popup_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:background="@drawable/dataentry_title_bg_selector"
            android:paddingBottom="12dp"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:paddingTop="12dp"
            android:text="Cancel"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>