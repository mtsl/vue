<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/vue_dataentry_keyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:divider="?android:attr/dividerVertical"
        android:dividerPadding="12dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:visibility="gone" >

        <include
            android:id="@+id/vue_dataentry_keyboard_cancel"
            layout="@layout/include_cancel_button" />

        <include
            android:id="@+id/vue_dataentry_keyboard_done"
            layout="@layout/include_done_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vue_dataentry_post_layout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:divider="?android:attr/dividerVertical"
        android:dividerPadding="12dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:visibility="gone" >

        <include
            android:id="@+id/actionbar_close"
            layout="@layout/include_close_screen" />

        <include
            android:id="@+id/actionbar_next"
            layout="@layout/include_next" />

        <include
            android:id="@+id/actionbar_post"
            layout="@layout/include_post_layout" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vue_dataentry_delete_layout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:divider="?android:attr/dividerVertical"
        android:dividerPadding="12dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:visibility="gone" >

        <include
            android:id="@+id/vue_dataentry_delete_cancel"
            layout="@layout/include_delete_cancle_btn" />

        <include
            android:id="@+id/vue_dataentry_delete_done"
            layout="@layout/include_delete_btn" />
    </LinearLayout>

</RelativeLayout>