<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dip"
    android:background="@drawable/actionbar_custom_bg" >

    <RelativeLayout
        android:id="@+id/vue_landing_actionbar_app_icon_layout"
        android:layout_width="48dip"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/vue_landing_actionbar_app_icon"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_centerInParent="true"
            android:src="@drawable/vue_launcher_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/vue_landing_actionbar_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/vue_landing_actionbar_app_icon_layout"
        android:gravity="center_vertical"
        android:paddingRight="6dip"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="18dip" />

    <LinearLayout
        android:id="@+id/vue_landing_actionbar_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/vue_landing_actionbar_createaisle_icon"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dip"
            android:src="@drawable/createaisle" />

        <TextView
            android:id="@+id/vue_landing_actionbar_createaisle_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingRight="6dip"
            android:text="@string/create_ailse_screen_title"
            android:textColor="@color/black"
            android:textSize="18dip" />
    </LinearLayout>

</RelativeLayout>