<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/dataentry_row_aisele_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="8dip"
        android:adjustViewBounds="true"
        android:background="@drawable/image_bg" />

    <LinearLayout
        android:id="@+id/image_delete_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/dataentry_row_aisele_image"
        android:layout_alignRight="@+id/dataentry_row_aisele_image"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rectangle"
        android:clickable="true" >

        <ImageView
            android:id="@+id/staricon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cancel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_edit_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/dataentry_row_aisele_image"
        android:layout_alignLeft="@+id/dataentry_row_aisele_image"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/rectangle"
        android:clickable="true" >

        <ImageView
            android:id="@+id/staricon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/edit" />
    </LinearLayout>

    <TextView
        android:id="@+id/touchtochangeimage"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:gravity="center"
        android:padding="8dip"
        android:text="Touch To Change Image"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/aisle_bg_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/aisle_bg_progressbar_drawable" />

</RelativeLayout>