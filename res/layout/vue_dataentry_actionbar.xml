<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dataentry_actionbar_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/dataentry_bg" >

        <RelativeLayout
            android:id="@+id/vue_dataentry_actionbar_app_icon_layout"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/vue_dataentry_actionbar_app_icon"
                android:layout_width="36dip"
                android:layout_height="36dip"
                android:layout_centerInParent="true"
                android:src="@drawable/vue_launcher_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/vue_dataentry_actionbar_screenname"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/vue_dataentry_actionbar_app_icon_layout"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="18dip" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/vue_dataentry_keyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/dataentry_bg"
        android:divider="?android:attr/dividerVertical"
        android:dividerPadding="12dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:visibility="gone" >

        <include
            android:id="@+id/vue_dataentry_keyboard_cancel"
            layout="@layout/include_cancel_button" />

        <include
            android:id="@+id/vue_dataentry_keyboard_done"
            layout="@layout/include_done_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vue_dataentry_post_layout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/dataentry_bg"
        android:divider="?android:attr/dividerVertical"
        android:dividerPadding="12dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:visibility="gone" >

        <include
            android:id="@+id/actionbar_close"
            layout="@layout/include_close_screen" />

        <include
            android:id="@+id/actionbar_post"
            layout="@layout/include_post_layout" />
    </LinearLayout>

    <View
        android:id="@+id/data_entry_third_line_divider"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#ADADAD" />

</LinearLayout>