<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:padding="8dp"
    android:background="@drawable/dataentry_title_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/popupheadid"
        layout="@layout/popupheading" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dip" >

        <TextView
            android:id="@+id/nothanks_alert_title_mesg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_thanks_click_alert_mesg"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/nothanks_alert_name_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nothanks_alert_title_mesg"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dip"
            android:background="@color/white"
            android:singleLine="true" >
        </EditText>

        <View
            android:id="@+id/leftline"
            android:layout_width="1dp"
            android:layout_height="4dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/nothanks_alert_name_box"
            android:layout_marginTop="4dp"
            android:background="@color/grey" />

        <View
            android:id="@+id/leftline"
            android:layout_width="1dp"
            android:layout_height="4dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/nothanks_alert_name_box"
            android:layout_marginTop="4dp"
            android:background="@color/grey" />

        <View
            android:id="@+id/bottomline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/nothanks_alert_name_box"
            android:layout_marginTop="8dp"
            android:background="@color/grey" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/popupbgcolor" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nothanks_alert_ok"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/vue_button_selector"
            android:gravity="center"
            android:text="Continue to Vue..."
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>