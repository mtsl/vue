<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/vue_list_fragment_sidemenu_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/list_cancle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/action_search" />

        <EditText
            android:id="@+id/side_Menu_searchBar"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/list_cancle"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="#ff0000"
            android:hint="@string/hint_search" />
    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/vue_list_fragment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:fadingEdge="none"
        android:groupIndicator="@null"
        android:layout_below="@+id/vue_list_fragment_sidemenu_actionbar"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/customlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical" >

        <!-- android:background="@drawable/appbg" -->

        <TextView
            android:id="@+id/setsizeid"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="0dp"
            android:background="@color/red"
            android:gravity="left|center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#ffffff"
            android:text="@string/fontsize" />

        <RelativeLayout
            android:id="@+id/fontSize_small"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:clickable="false" >

            <TextView
                android:id="@+id/samllid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:text="Small"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/samllcheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="false" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#6699CC" />

        <RelativeLayout
            android:id="@+id/fontSize_medium"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:clickable="false" >

            <TextView
                android:id="@+id/mediumid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:text="Medium"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/mediumcheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="false" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#6699CC" />

        <RelativeLayout
            android:id="@+id/fontSize_large"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:clickable="false" >

            <TextView
                android:id="@+id/largeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:text="Large"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/largecheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="false" />
        </RelativeLayout>

        <TextView
            android:id="@+id/connmanagement"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="0dp"
            android:background="@color/red"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:text="@string/connectivity_management"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp" >

            <TextView
                android:id="@+id/wifiid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/wifyonly"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/wificheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <!-- android:layout_gravity="center|center" -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/red"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/donelayout"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="4dp"
                    android:layout_weight="2"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <!-- android:background="@color/lemon" -->

                    <TextView
                        android:id="@+id/done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="Done"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </RelativeLayout>

                <!--
                 <View
                android:id="@+id/deffview"
                android:layout_width="2dp"
                android:layout_height="42dp"
                android:layout_gravity="bottom"
                android:background="@color/orange" />
                -->

                <RelativeLayout
                    android:id="@+id/cancellayout"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="4dp"
                    android:layout_weight="2"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <!-- android:background="@color/lemon" -->

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="4dp"
                        android:gravity="center|center"
                        android:text="Cancel"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<LinearLayout
        android:id="@+id/aboutlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <include
                    android:id="@+id/bannerid"
                    layout="@layout/feedbacktext" />
                <RelativeLayout
                    android:id="@+id/aboutdonelayout"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="42dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/buton_rounded_corners"
                    android:orientation="horizontal" >

                    <!--android:layout_marginLeft="8dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/lemon" -->

                    <TextView
                        android:id="@+id/aboutdone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="Done"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <!-- about screen add -->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/vue_list_fragment_invite_friendsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vue_list_fragment_sidemenu_actionbar"
        android:visibility="gone"
        >
        
        <ListView
            android:id="@+id/vue_list_fragment_Invitefriends_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
        </LinearLayout>
</RelativeLayout>